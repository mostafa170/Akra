<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.kamel.akra.app.presentation.prayer.PrayersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".app.presentation.prayer.PrayersFragment">

        <ImageView
            android:id="@+id/image_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:contentDescription="@string/img"
            android:onClick="@{() -> viewModel.onBackClicked()}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_pageName"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/label_prayer_time"
            android:textColor="@color/color_6992AC"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_back"
            app:layout_constraintEnd_toStartOf="@+id/image_view_back"
            app:layout_constraintTop_toTopOf="@+id/image_view_back" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bg_prayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_back" />

        <TextView
            android:id="@+id/text_view_next_prayer"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            android:text="@{@string/label_next_prayer_page(viewModel.upcomingPrayerName)}"
            android:textColor="@color/color_707070"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:text="متبقى على صلاة المغرب" />

        <com.kamel.akra.app.utilsView.TextViewWithArabicDigits
            android:id="@+id/text_view_next_prayer_watch"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.upcomingPrayerTimerText}"
            android:textColor="@color/color_6992AC"
            android:textSize="@dimen/_24ssp"
            android:gravity="center"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_next_prayer"
            tools:text="07:25:03" />

        <com.kamel.akra.app.utilsView.TextViewWithArabicDigits
            android:id="@+id/text_view_next_prayer_time"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/label_next_prayer_reminder_page(viewModel.upcomingPrayerTime)}"
            android:textColor="@color/color_707070"
            android:textSize="@dimen/_12ssp"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_next_prayer_watch"
            tools:text="يحين موعد صلاه المغرب في 6:16م" />

        <com.kamel.akra.app.utilsView.TextViewWithArabicDigits
            android:id="@+id/text_view_date_melady"
            style="@style/MyTextViewStyleRegular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_B9B9B9"
            android:textSize="@dimen/_12ssp"
            android:text="@{viewModel.dayDate}"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_view_date_hjri"
            app:layout_constraintTop_toBottomOf="@+id/text_view_next_prayer_time"
            tools:text="‏26 ديسمبر 2022" />

        <com.kamel.akra.app.utilsView.TextViewWithArabicDigits
            android:id="@+id/text_view_date_hjri"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/color_B9B9B9"
            android:textSize="@dimen/_12ssp"
            android:text="@{viewModel.dayHijriDate}"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toStartOf="@+id/text_view_date_melady"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_next_prayer_time"
            tools:text="‏2 جمادي الآخر 1444" />

        <TextView
            android:id="@+id/text_view_next_prayer_un_valid"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/open_location_for_prayers"
            android:textColor="@color/color_6992AC"
            android:textSize="@dimen/_15ssp"
            android:visibility="@{viewModel.dayPrayers == null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_back"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_pageName_recycler"
            style="@style/MyTextViewStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/label_prayer_time"
            android:textColor="@color/color_6992AC"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="@+id/image_view_back"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_prayers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:visibility="@{viewModel.upcomingPrayer != null ? View.VISIBLE : View.INVISIBLE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_pageName_recycler"
            tools:itemCount="6"
            tools:listitem="@layout/_item_prayer" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>