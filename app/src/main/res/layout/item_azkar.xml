<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="zekr"
            type="com.kamel.akra.domain.entities.Zekr" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/azkar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp"
                android:text="@{zekr.content}"
                style="@style/MyTextViewStyleRegular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="رَضيـتُ بِاللهِ رَبَّـاً وَبِالإسْلامِ ديـناً وَبِمُحَـمَّدٍ صلى الله عليه وسلم نَبِيّـاً"/>

            <TextView
                android:id="@+id/azkar_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6992AC"
                android:textSize="@dimen/_12ssp"
                android:text="@{@string/label_zekr_count(zekr.count)}"
                tools:text="عدد المرات: 3"
                style="@style/MyTextViewStyleRegular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/azkar_text" />

            <TextView
                android:id="@+id/text_view_azkar_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_B9B9B9"
                android:textSize="@dimen/_12ssp"
                android:text="@{zekr.description}"
                style="@style/MyTextViewStyleRegular"
                tools:text="من قالها حين يصبح وحين يمسى كان حقا على الله أن يرضيه يوم القيامة."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/azkar_count" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/color_B9B9B9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_azkar_desc" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>